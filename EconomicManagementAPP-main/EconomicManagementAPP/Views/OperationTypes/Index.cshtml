@model IEnumerable<OperationTypes>

@{
    ViewData["Title"] = "List Operation Types";
}

<h1>Operation Types List</h1>

<a asp-action="Create" class="btn btn-submit mb-3">Create Operation Types</a>

<table class="table">
    <thead>
        <tr>
            <th>Actions</th>
            <th>Operation Types</th>
        </tr>
    </thead>
    <tbody id="reordenable">
        @foreach (var operationTypes in Model)
        {
            <tr>
                <td>
                    <input type="hidden" value="@operationTypes.Id" class="ids" />
                    <a class="btn btn-secondary" asp-action="Update" asp-route-id="@operationTypes.Id"><i class='bx bxs-edit-alt'></i> Update</a>
                    <a class="btn btn-delete" asp-action="Delete" asp-route-id="@operationTypes.Id"> <i class='bx bxs-trash-alt'> </i> Delete</a>
                </td>
                <td>
                    @operationTypes.Description
                </td>

            </tr>
        }
    </tbody>
</table>
