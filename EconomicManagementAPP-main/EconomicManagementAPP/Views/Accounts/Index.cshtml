@model IEnumerable<Accounts>

@{
    ViewData["Title"] = "Accounts";
}

<h1>Account List</h1>

<a asp-action="Create" class="btn btn-success mb-3">Create account</a>

<table class="table">
    <thead>
        <tr>
            <th>Actions</th>
            <th>Name</th>
            <th>Account Type</th>
            <th>Balance</th>
        </tr>
    </thead>
    <tbody id="reordenable">
        @foreach (var accounts in Model)
        {
            <tr>
                <td>
                    <input type="hidden" value="@accounts.Id" class="ids" />
                    <a class="btn btn-secondary" asp-action="Update" asp-route-id="@accounts.Id"> <i class='bx bxs-edit-alt'></i> Modify</a>
                    <a class="btn btn-delete" asp-action="Delete" asp-route-id="@accounts.Id"> <i class='bx bxs-trash-alt'> </i> Delete</a>
                </td>
                <td>
                    @accounts.Name
                </td>
                <td>
                    @accounts.AccountTypeId
                </td>
                <td>
                    @accounts.Balance
                </td>

            </tr>
        }
    </tbody>
</table>