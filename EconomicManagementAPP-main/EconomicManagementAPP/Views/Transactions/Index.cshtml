@model IEnumerable<Transactions> 

@{
    ViewData["Title"] = "List Transactions";
}

<h1>Transactions List</h1>

<a asp-action="Create" class="btn btn-success mb-3">Create Transaction</a>

<table class="table">
    <thead>
        <tr>
            <th>Actions</th>
            <th>Operation Types</th>
            <th>Description</th>
            <th>Account</th>
            <th>Category</th>
            <th>Trasanction Date</th>
        </tr>
    </thead>
    <tbody id="reordenable">
        @foreach (var transaction in Model)
        {
            <tr>
                <td>
                    <input type="hidden" value="@transaction.Id" class="ids" />
                    <a class="btn btn-secondary" asp-action="Update" asp-route-id="@transaction.Id"> <i class='bx bxs-edit-alt'></i> Update</a>
                    <a class="btn btn-delete" asp-action="Delete" asp-route-id="@transaction.Id"> <i class='bx bxs-trash-alt'></i> Delete</a>
                </td>
                <td>
                    @transaction.OperationTypeId
                </td>
                <td>
                    @transaction.Description
                </td>
                <td>
                    @transaction.AccountId
                </td>
                <td>
                    @transaction.CategoryId
                </td>
                <td>
                    @transaction.TransactionDate
                </td>
            </tr>
        }
    </tbody>
</table>