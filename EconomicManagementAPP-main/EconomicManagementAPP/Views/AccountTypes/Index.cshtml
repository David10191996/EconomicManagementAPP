@model IEnumerable<AccountTypes>

@{
    ViewData["Title"] = "Account Types";
}

<h1>Account Types List</h1>

<a asp-action="Create" class="btn btn-submit mb-3">Create account</a>

<table class="table">
    <thead>
        <tr>
            <th>Actions</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody id="reordenable">
        @foreach (var accountTypes in Model)
        {
            <tr>
                <td>
                    <input type="hidden" value="@accountTypes.Id" class="ids" />
                    <a class="btn btn-secondary" asp-action="Update" asp-route-id="@accountTypes.Id"> <i class='bx bxs-edit-alt'></i> Update </a>
                    <a class="btn btn-delete" asp-action="Delete" asp-route-id="@accountTypes.Id"> <i class='bx bxs-trash-alt'> </i>Delete </a>
                </td>
                <td>
                    @accountTypes.Name
                </td>

            </tr>
        }
    </tbody>
</table>