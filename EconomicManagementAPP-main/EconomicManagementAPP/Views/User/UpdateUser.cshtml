@*

*@
@model User
@{
    ViewData["Title"] = "Update User";
}

<h1>Update User: @Model.Email</h1>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="UpdateUser">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Pass" class="form-label"></label>
        <input type="password" asp-for="Pass" placeholder="Enter new Password" class="form-control" />
        <span asp-validation-for="Pass" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="StandarEmail" class="form-label"></label>
        <input type="email" asp-for="StandarEmail" placeholder="Enter new Standar Email" class="form-control" />
        <span asp-validation-for="StandarEmail" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-secondary">Update User</button>
    <a class="btn btn-delete" asp-action="Index">Cancel</a>
</form>

@section Scripts{
<partial name="_ValidationScriptsPartial" />
}