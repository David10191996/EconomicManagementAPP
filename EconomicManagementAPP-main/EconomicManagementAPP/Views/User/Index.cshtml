

@model IEnumerable<User>

@{
    ViewData["Title"] = "List User";
}

<h1>User List</h1>

<a asp-action="Create"class="btn btn-submit mb-3">Create User</a>

<table class="table">
    <thead>
        <tr>
            <th>Actions</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody id="reordenable">
        @foreach (var users in Model)
        {
            <tr>
                <td>
                    <input type="hidden" value="@users.Id" class="ids" />
                    <a class="btn btn-secondary" asp-action="UpdateUser" asp-route-id="@users.Id"><i class='bx bxs-edit-alt'></i> Update</a>
                    <a class="btn btn-delete" asp-action="Delete" asp-route-id="@users.Id"><i class='bx bxs-trash-alt'></i> Delete</a>
                </td>
                <td>
                    @users.Email
                </td>
            </tr>
        }
         
    </tbody>
</table>
