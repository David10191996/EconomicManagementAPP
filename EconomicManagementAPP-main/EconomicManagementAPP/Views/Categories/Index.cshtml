@model IEnumerable<Categories>

@{
    ViewData["Title"] = "Categories";
}

<h1>Categories List</h1>

<a asp-action="Create" class="btn btn-submit mb-3">Create categorie</a>

<table class="table">
    <thead>
        <tr>
            <th>Actions</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody id="reordenable">
        @foreach (var categorie in Model)
        {
            <tr>
                <td>
                    <input type="hidden" value="@categorie.Id" class="ids" />
                    <a class="btn btn-secondary" asp-action="Update" asp-route-id="@categorie.Id"> <i class='bx bxs-edit-alt'></i> Update</a>
                    <a class="btn btn-delete" asp-action="Delete" asp-route-id="@categorie.Id"> <i class='bx bxs-trash-alt'> </i> Delete</a>
                </td>
                <td>
                    @categorie.Name
                </td>

            </tr>
        }
    </tbody>
</table>
